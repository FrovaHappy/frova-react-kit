{
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "outDir": "dist",
    "module": "ES2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": ["vitest/globals", "../src/global.d.ts"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@mocks/*": ["mocks/*"],
    }
  },
  "include": [ "**/*.ts", "**/*.tsx", "tsconfig.json" ],
  "exclude": ["node_modules", "dist"]
}
